package android.example.djlee.rabbitracing;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.os.Handler;
import android.os.Message;
import android.view.View;

public class RabbitView extends View {
	public int r1_y, r2_y;//토끼의 y좌표
	Integer flag = 0;//왼쪽토끼가 먼저 도착하면 1, 오른쪽 토끼가 먼저도착하면 2
	String name;//먼저 도착한 토끼의 이름
	Bitmap[] rabbit1 = new Bitmap[2];//왼쪽토끼용 비트맵
	Bitmap[] rabbit2 = new Bitmap[2];//오른쪽 토끼용 비트맵
	int counter; int order;
	public RabbitView(Context context) {
		super(context);
		rabbit1[0]=BitmapFactory.decodeResource(
				getResources(), R.drawable.rabbit_1);
		rabbit1[1]=BitmapFactory.decodeResource(
				getResources(), R.drawable.rabbit_2);
		rabbit2[0]=BitmapFactory.decodeResource(
				getResources(), R.drawable.rabbit_1);
		rabbit2[1]=BitmapFactory.decodeResource(
				getResources(), R.drawable.rabbit_2);
		LeftRabbit lr = new LeftRabbit(this);//스레드 생성
		RightRabbit rr = new RightRabbit(this);//스레드 생성
		lr.start(); rr.start();//스레드 시작
		//핸들러 호출
		mHandler.sendEmptyMessageDelayed(0, 10);
	}
	Handler mHandler = new Handler(){
		public void handleMessage(Message msg) {
			invalidate();
			mHandler.sendEmptyMessageDelayed(0, 10);
		}
	};
	protected void onDraw(Canvas canvas) {
		counter++;
		order = (counter % 20) /10;
		canvas.drawBitmap(rabbit1[order],100,1000-(r1_y * 10),null);
		canvas.drawBitmap(rabbit2[order],350,1000-(r2_y * 10),null);
		if(flag == 1){
			Paint paint = new Paint();
			paint.setAntiAlias(true);
			paint.setTextSize(50);
			paint.setColor(Color.BLUE);
			canvas.drawText(name+"이 먼저 도착했습니다.",100,50,paint);
		}else if(flag == 2){
			Paint paint = new Paint();
			paint.setAntiAlias(true);
			paint.setTextSize(50);
			paint.setColor(Color.BLUE);
			canvas.drawText(name+"이 먼저 도착했습니다.",100,50,paint);
		}
	}

}







